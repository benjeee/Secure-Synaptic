install: install-stamp
install-stamp: build
	dh_testdir
	dh_testroot
	dh_clean -k
	#dh_installdirs
	$(MAKE) install DESTDIR=$(CURDIR)/debian/synaptic
	cp debian/synaptic_32x32.xpm $(CURDIR)/debian/synaptic/usr/share/synaptic/pixmaps


